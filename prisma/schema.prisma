// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// User Roles: admin, advisor, client, partner
model User {
  id                String    @id @default(cuid())
  email             String    @unique
  emailVerified     DateTime?
  password          String?
  name              String?
  phone             String?
  address           String?
  city              String?
  state             String?
  zipCode           String?
  dateOfBirth       DateTime?
  ssn               String?   // Encrypted
  role              String    @default("client") // admin, advisor, client, partner
  status            String    @default("active") // active, suspended, pending
  twoFactorEnabled  Boolean   @default(false)
  twoFactorSecret   String?
  image             String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  // Relations
  advisor           User?     @relation("AdvisorClients", fields: [advisorId], references: [id])
  advisorId         String?
  clients           User[]    @relation("AdvisorClients")

  accounts          Account[]
  sessions          Session[]
  appointments      Appointment[]      @relation("ClientAppointments")
  advisorAppointments Appointment[]    @relation("AdvisorAppointments")
  documents         Document[]         @relation("ClientDocuments")
  uploadedDocuments Document[]         @relation("UploadedDocuments")
  taxReturns        TaxReturn[]        @relation("ClientTaxReturns")
  advisorTaxReturns TaxReturn[]        @relation("AdvisorTaxReturns")
  sentMessages      Message[]          @relation("SentMessages")
  receivedMessages  Message[]          @relation("ReceivedMessages")
  leads             Lead[]
  activities        ActivityLog[]
  notifications     Notification[]
  partner           Partner?
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())
}

model Appointment {
  id          String   @id @default(cuid())
  clientId    String
  advisorId   String?
  date        DateTime
  time        String
  duration    Int      @default(60) // minutes
  type        String   // Tax Preparation, Tax Planning, Business Tax, etc.
  status      String   @default("scheduled") // scheduled, confirmed, completed, cancelled
  notes       String?
  location    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  client      User     @relation("ClientAppointments", fields: [clientId], references: [id])
  advisor     User?    @relation("AdvisorAppointments", fields: [advisorId], references: [id])
}

model Document {
  id                String    @id @default(cuid())
  userId            String
  uploadedById      String
  type              String    // W-2, 1099, Business, Personal ID, Tax Return, Other
  filename          String
  originalName      String
  filePath          String
  fileSize          Int
  mimeType          String
  description       String?
  year              Int
  status            String    @default("active") // active, deleted
  deletedAt         DateTime?
  rapidDocAccessId  String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  user              User      @relation("ClientDocuments", fields: [userId], references: [id])
  uploadedBy        User      @relation("UploadedDocuments", fields: [uploadedById], references: [id])
  rapidDocAccess    RapidDocAccess? @relation(fields: [rapidDocAccessId], references: [id])
  taxReturn         TaxReturn? @relation(fields: [taxReturnId], references: [id])
  taxReturnId       String?
}

model TaxReturn {
  id              String   @id @default(cuid())
  userId          String
  advisorId       String?
  year            Int
  filingStatus    String?  // single, married-joint, married-separate, head-of-household
  status          String   @default("draft") // draft, in-review, pending-signature, filed, completed

  // Personal Info
  personalInfo    String?  // JSON

  // Income
  wageIncome      Float?
  interestIncome  Float?
  dividendIncome  Float?
  businessIncome  Float?
  capitalGains    Float?
  otherIncome     Float?
  totalIncome     Float?

  // Deductions
  standardDeduction Boolean @default(true)
  itemizedDeductions Float?
  totalDeductions Float?

  // Tax Calculation
  taxableIncome   Float?
  federalTax      Float?
  stateTax        Float?
  totalTax        Float?
  withholdings    Float?
  refundAmount    Float?
  amountOwed      Float?

  // Banking
  bankRouting     String?
  bankAccount     String?
  bankAccountType String?  // checking, savings

  // Signatures
  engagementSigned Boolean @default(false)
  engagementSignedAt DateTime?
  form8879Signed  Boolean @default(false)
  form8879SignedAt DateTime?

  // Wizard Progress
  currentStep     Int      @default(1)
  completedSteps  String?  // JSON array of completed step numbers

  notes           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  client          User     @relation("ClientTaxReturns", fields: [userId], references: [id])
  advisor         User?    @relation("AdvisorTaxReturns", fields: [advisorId], references: [id])
  documents       Document[]
  dependents      Dependent[]
}

model Dependent {
  id              String    @id @default(cuid())
  taxReturnId     String
  firstName       String
  lastName        String
  relationship    String
  dateOfBirth     DateTime
  ssn             String?
  createdAt       DateTime  @default(now())

  taxReturn       TaxReturn @relation(fields: [taxReturnId], references: [id], onDelete: Cascade)
}

model Message {
  id          String   @id @default(cuid())
  senderId    String
  receiverId  String
  content     String
  attachments String?  // JSON array of attachment info
  read        Boolean  @default(false)
  readAt      DateTime?
  createdAt   DateTime @default(now())

  sender      User     @relation("SentMessages", fields: [senderId], references: [id])
  receiver    User     @relation("ReceivedMessages", fields: [receiverId], references: [id])
}

model Lead {
  id          String   @id @default(cuid())
  name        String
  email       String
  phone       String?
  source      String?  // website, referral, partner, etc.
  status      String   @default("new") // new, contacted, qualified, converted, lost
  notes       String?
  assignedToId String?
  partnerId   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  assignedTo  User?    @relation(fields: [assignedToId], references: [id])
  partner     Partner? @relation(fields: [partnerId], references: [id])
}

model Partner {
  id              String   @id @default(cuid())
  userId          String   @unique
  businessName    String
  contactName     String
  email           String
  phone           String?
  website         String?
  address         String?
  status          String   @default("pending") // pending, active, suspended, rejected
  commissionRate  Float    @default(0.10) // 10%
  totalRevenue    Float    @default(0)
  totalLeads      Int      @default(0)
  referralCode    String   @unique
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user            User     @relation(fields: [userId], references: [id])
  leads           Lead[]
}

model RapidDocAccess {
  id          String   @id @default(cuid())
  clientName  String
  clientEmail String
  code        String   @unique
  expiresAt   DateTime
  used        Boolean  @default(false)
  completed   Boolean  @default(false)
  userId      String?  // Linked user after upload
  createdAt   DateTime @default(now())

  documents   Document[]
}

model EmailCampaign {
  id          String   @id @default(cuid())
  name        String
  subject     String
  content     String
  status      String   @default("draft") // draft, scheduled, sent
  scheduledAt DateTime?
  sentAt      DateTime?
  openCount   Int      @default(0)
  clickCount  Int      @default(0)
  recipientCount Int   @default(0)
  categories  String?  // JSON array
  tags        String?  // JSON array
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model EmailContact {
  id          String   @id @default(cuid())
  email       String   @unique
  name        String?
  categories  String?  // JSON array
  tags        String?  // JSON array
  subscribed  Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model BlogPost {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  content     String
  excerpt     String?
  featuredImage String?
  metaDescription String?
  status      String   @default("draft") // draft, published, scheduled
  publishedAt DateTime?
  scheduledAt DateTime?
  authorId    String?
  categories  String?  // JSON array
  tags        String?  // JSON array
  viewCount   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ActivityLog {
  id          String   @id @default(cuid())
  userId      String?
  action      String   // login, logout, create, update, delete, view, etc.
  entity      String?  // user, appointment, document, taxReturn, etc.
  entityId    String?
  details     String?  // JSON
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())

  user        User?    @relation(fields: [userId], references: [id])
}

model Notification {
  id          String   @id @default(cuid())
  userId      String
  type        String   // appointment, document, message, taxReturn, etc.
  title       String
  message     String
  link        String?
  read        Boolean  @default(false)
  readAt      DateTime?
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id])
}

model Setting {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String
  type        String   @default("string") // string, number, boolean, json
  category    String   @default("general") // general, email, security, etc.
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
